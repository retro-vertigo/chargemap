{#
/**
 * Block Name: Block Testimonial
 *
 */
#}

<section class="{{ block.classes }}" id="{{ block.id }}">

	{% if title or subtitle %}
		<div class="block-container l-container">

			{% if title %}
				<h2 class="title-block">{{ title|titleColor }}</h2>
			{% endif %}

		</div>
		{# end .block-container #}
	{% endif %}

	{% if items|length %}
		<div class="slider-testimonial custom-scrollbar">
			{% for item in items %}
				<div class="slide-testimonial-wrapper">

					<div class="slide-testimonial">
						{% if item.title %}
							<span class="slide-testimonial__title suptitle">{{ item.title }}</span>
						{% endif %}
						{% if item.text %}
							<p class="slide-testimonial__text">{{ item.text }}</p>
						{% endif %}

						<div class="slide-testimonial__footer">
							{% if item.image %}
								<img {{ setImgAttributes( item.image ) }}/>
							{% endif %}

							<div class="slide-testimonial__infos">
								{% if item.author %}
									<span class="slide-testimonial__author">{{ item.author }}</span>
								{% endif %}
								{% if item.date %}
									<span class="slide-testimonial__date">{{ item.date }}</span>
								{% endif %}
							</div>
						</div>
					</div>

				</div>

			{% endfor %}
		</div>
	{% endif %}

</section>
{# end .block #}
