{#
/**
 * Block Name: Block Columns
 *
 */
#}

<section class="{{ block.classes }} {{ display }}" id="{{ block.id }}">
  <div class="block-container l-container --large">

    {% if title %}
        <h2 class="title-block u-text-center">{{ title|titleColor }}</h2>
    {% endif %}
    
    <div class="block-columns__inner">
        {% for item in columns %}

            <div class="column editor">
                {% if item.icon %}
                    <img src="{{ item.icon.url }}" alt="{{ item.icon.alt }}" />
                {% endif %}
                {% if item.title %}
                    <span class="suptitle">{{ item.title }}</span>
                {% endif %}
                {% if item.wysi %}
                    <div class="wysi">{{ item.wysi }}</div>
                {% endif %}
            </div>
            
        {% endfor %}
    </div>
  
  </div>    {# end .block-container #}
</section>  {# end .block #}