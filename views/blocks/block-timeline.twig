{#
/**
 * Block Name: Block Anchors
 *
 */
#}

<section class="{{ block.classes }}" id="{{ block.id }}">
    <div class="panels-wrapper l-container">
        {% for item in items %}
            <div class="panel-timeline">

                <div class="panel-timeline__content editor">
                    {% if item.suptitle %}
                        <span class="panel-timeline__suptitle h2">{{ item.suptitle }}</span>
                    {% endif %}
                    {% if item.date %}
                        <span class="panel-timeline__date">{{ item.date }}</span>
                    {% endif %}
                    {% if item.wysi %}
                        <div class="wysi">{{ item.wysi }}</div>
                    {% endif %}
                </div>

                <div class="panel-timeline__image">
                    {% if item.image %}
                        <figure class="ratio-4-3">
                            {{ getRwdImage( item.image.id, 'cover', 'large',  { class:'u-border-radius u-image-cover' } ) }}
                        </figure>
                    {% endif %}
                </div>
                
            </div>
        {% endfor %}
    </div>
  
</section>  {# end .block #}